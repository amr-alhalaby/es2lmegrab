<div class="page-header">
  <%= link_to new_question_tag_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Question tag
  <% end %>
  <h1>Listing question_tags</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @question_tags) do |question_tag| %>
            <td><%= link_to 'Show', question_tag %></td>
        <td><%= link_to 'Edit', edit_question_tag_path(question_tag) %></td>
        <td><%= link_to 'Destroy', question_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
